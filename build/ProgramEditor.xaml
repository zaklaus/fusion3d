<Window x:Class="build.ProgramEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:build"
        mc:Ignorable="d"
        Title="Fusion3D Program Editor" Height="298" Width="541" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Programs:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"></Label>
        <StackPanel Name="Programs" Width="500" Height="150" Margin="0,40,0,0" VerticalAlignment="Top">
            <ListBox Name="ProgramList" Width="500" Height="150" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible">

            </ListBox>
        </StackPanel>
        <Grid Name="Buttons" Width="500" Height="55" Margin="10,0,9,10" VerticalAlignment="Bottom">
            <Button Name="GenerateProgram" Content="Generate Program" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Click="GenerateProgram_Click"></Button>
            <Button Name="RenameProgram" Content="Rename Selected Program" Width="200" Height="25" Margin="0,0,300,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RenameProgram_Click"></Button>
            <Button Name="RemoveProgram" Content="Remove Selected Program" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Click="RemoveProgram_Click"></Button>
        </Grid>
    </Grid>
</Window>
