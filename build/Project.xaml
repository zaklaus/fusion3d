<Window x:Class="build.Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:build"
        mc:Ignorable="d"
        Title="Project" Height="280" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Name="Options">
            <ComboBox Name="BuildConfig" Width="100" HorizontalAlignment="Left" Margin="20,10,0,0">
                <ComboBoxItem>Debug</ComboBoxItem>
                <ComboBoxItem>Release</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Name="Buttons" Margin="0,30,0,0">
            <Button Name="BuildProject" Content="Build Project" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="BuildProject_Click"></Button>
            <Button Name="ExecProject" Content="Execute Project" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ExecProject_Click"></Button>
            <Button Name="CopyData" Content="Copy Data" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="CopyData_Click"></Button>
            <Button Name="CopyDependencies" Content="Copy Dependencies" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="CopyDependencies_Click"></Button>
            <Button Name="ProgramEditor2" Content="Program Editor" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ProgramEditor2_Click"></Button>
            <Button Name="OpenDir" Content="Open Containing Folder" Width="260" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0" Click="OpenDir_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
