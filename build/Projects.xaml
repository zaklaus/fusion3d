<Window x:Class="build.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:build"
        mc:Ignorable="d"
        Title="Fusion3D Build Tool" Height="298" Width="541" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Initialized="Grid_Initialized">
        <Label Content="Projects:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"></Label>
        <StackPanel Name="Projects" Width="500" Height="100" Margin="0,40,0,0" VerticalAlignment="Top">
            <ListBox Name="ProjectList" Width="500" Height="100" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible">

            </ListBox>
        </StackPanel>
        <Grid Name="Buttons" Width="500" Height="85" Margin="10,0,9,10" VerticalAlignment="Bottom">
            <Button Name="CreateProject" Content="Create New Project" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CreateProject_Click"></Button>
            <Button Name="LoadProject" Content="Load Selected Project" Width="200" Height="25" Margin="0,5,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="LoadProject_Click"></Button>
            <Button Name="RenameProject" Content="Rename Selected Project" Width="200" Height="25" Margin="0,0,0,30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="RenameProject_Click"></Button>
            <Button Name="RemoveProject" Content="Remove Selected Project" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Click="RemoveProject_Click"></Button>
            <Button Name="Build" Content="Build Engine" Width="200" Height="25" Margin="0,5,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Build_Click"></Button>
        </Grid>
    </Grid>
</Window>
